#!/bin/bash
# SSH Command: bash <(curl -ks https://raw.githubusercontent.com/UniqueOps/A.V.A/master/ava)";
# Information: https://github.com/UniqueOps/A.V.A-Shell

# Declare A.V.A Version
ava_version="0.1"

echo -e "                             ";
echo -e " █████╗   ██╗   ██╗   █████╗ ";
echo -e "██╔══██╗  ██║   ██║  ██╔══██╗";
echo -e "███████║  ██║   ██║  ███████║";
echo -e "██╔══██║  ╚██╗ ██╔╝  ██╔══██║";
echo -e "██║  ██║██╗╚████╔╝██╗██║  ██║";
echo -e "╚═╝  ╚═╝╚═╝ ╚═══╝ ╚═╝╚═╝  ╚═╝";
echo -e "                             ";

# Confirm Working Environment
os-release=/etc/os-release
if [ -f "$os-release" ]; then
  echo -e "[--] A.V.A script has been initiated";
  echo -e "[--] Version $ava_version detected\\n";
else
  echo -e "[--] Unstable OS detected";
  echo -e "[--] Terminating script in 5 seconds...\\n" && sleep 5; 
  exit;
fi

# Global File Locations
sleep 2m;
