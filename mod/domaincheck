#!/bin/bash


#echo -e "\\nWhat is the domain?"                                                                                       # Ask For The Domain
#read -r domain;                                                                                                        # Put Domain Into Variable
domain="ht tps:// www . uniqueops.com !@#$%^&* ~ -=_+ []{}\| ;: ,./<>? ' /test/ testing.php/"                           # All Special Characters Used Minus ` and "

echo -e "\\n\\n\\nStarted as: $domain\\n"                                                                               # Echo Domain For Testing Purposes                                                                                      # Declare Failing Status
domain=${domain//[[:blank:]]/}                                                                                          # Remove Spaces & Tabs
echo -e "Spaces Removed: $domain\\n"                                                                                    # Echo Domain For Testing Purposes                                                                                      # Declare Failing Status
domain=${domain#*//};                                                                                                   # Remove HTTP:// or HTTPS://
echo -e "http:// Removed: $domain\\n"                                                                                   # Echo Domain For Testing Purposes                                                                                      # Declare Failing Status
domain=${domain#*www.};                                                                                                 # Remove WWW.
echo -e "WWW Removed: $domain\\n"                                                                                       # Echo Domain For Testing Purposes                                                                                      # Declare Failing Status
domain=${domain%/};                                                                                                     # Remove Trailing /
echo -e "Trailing / Removed: $domain\\n"                                                                                # Echo Domain For Testing Purposes                                                                                      # Declare Failing Status
domain=${domain} | sed $'s/[^[:print:]\t]//g';                                                                          # Remove Any Directories Added
echo -e "Final version is $domain\\n"                                                                                   # Echo Domain For Testing Purposes                                                                                      # Declare Failing Status
